<%= simple_form_for(book) do |f| %>
  <div class="form-inputs">
    <%= f.input :title, label: 'Título:' %>
    <%= f.input :author, label: 'Autor:' %>
    <%= f.input :description, label: 'Descripción:' %>
    <%= f.input :released_year, label: 'Año de publicación:' %>
    <%= f.input :price, label: 'Precio por día:' %>
    <%= f.input :category, label: 'Categoría:',
                 :collection => %w[Autoayuda Ciencia-ficción Ciencias Ingenierías Novelas Sociales Suspenso Otro] %>
    <%= f.input :photo, as: :file %>
  </div>

  <div class="form-actions">
    <%= f.submit 'Agregar libro', class: 'btn btn-primary' %>
  </div>
<% end %>
