<%= simple_form_for(book) do |f| %>
  <div class="form-inputs">
    <%= f.input :title, label: 'Título:' %>
    <%= f.input :author, label: 'Autor:' %>
    <%= f.input :description, label: 'Descripción:' %>
    <%= f.input :released_year, label: 'Año de publicación:' %>
    <%= f.input :price, label: 'Precio:' %>
    <%= f.input :category, label: 'Categoría:',
                 :collection => %w[Autobiográfico Autoayuda Ciencia-ficción Científico Novela Suspenso Otro] %>
  </div>

  <div class="form-actions">
    <%= f.submit 'Agregar libro', class: 'btn btn-primary' %>
  </div>
<% end %>
