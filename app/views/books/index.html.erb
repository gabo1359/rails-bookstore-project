<div class="container">
<% if policy(Book).create? %>
  <div class="text-right">
    <%= link_to 'Nuevo Libro', new_book_path, class: 'btn btn-outline-primary mb-2' %>
  </div>
<% end %>
<div class="auto-grid">
  <% @books.each do |book| %>

    <div class="card" style="box-shadow: 1px 2px 4px rgb(0 0 0 / 10%)">
      <%= image_tag "libro.jpg", alt: "foto libro", class: 'card-img-top'  %>
      <div class="card-body card-book">
        <p class="title-section">
          <% if policy(book).show? %>
            <%= link_to "#{book.title }", book_path(book), class: '' %>
          <% end %>
        </p>
        <div class="author-book">
          <div class="author-book-label">
            <div>Autor:</div><p></p>
          </div>
          <p><%= book.author %></p>
        </div>

        <div class="price-book">
          <span>S/ 56.00</span>
        </div>
        <div class="text-right">
          <% if policy(book).update? %>
            <%= link_to '📝', edit_book_path(book) %>
          <% end %>
          <% if policy(book).destroy? %>
            <%= link_to '🗑️', book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %>
        </div>

      </div>
    </div>
  <% end %>
</div>
